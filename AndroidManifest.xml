<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dynamicwallpaper.projectivy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Leanback">

        <!-- Main Settings Activity -->
        <activity
            android:name=".ui.SettingsActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Projectivy Plugin Service -->
        <service
            android:name=".service.DynamicWallpaperService"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="com.spocky.projengmenu.PLUGIN" />
            </intent-filter>
            <meta-data
                android:name="plugin_name"
                android:value="Dynamic Wallpaper" />
            <meta-data
                android:name="plugin_version"
                android:value="1.0" />
        </service>

        <!-- Content Provider for caching images -->
        <provider
            android:name=".data.ImageCacheProvider"
            android:authorities="com.dynamicwallpaper.projectivy.provider"
            android:exported="false" />

        <!-- Broadcast Receiver for Projectivy events -->
        <receiver
            android:name=".util.ProjectivyEventReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.spocky.projengmenu.APP_FOCUSED" />
                <action android:name="com.spocky.projengmenu.APP_UNFOCUSED" />
                <action android:name="com.spocky.projengmenu.APP_LAUNCHED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
